  s(
    { trig = "maketable([%d+ ])", wordTrig = false, regTrig = true, snippetType = "autosnippet" },
    f(function(_, snip)
      local num_rows = tonumber(snip.captures[1]) or 1
      if num_rows < 1 then
        num_rows = 1
      end
      if num_rows > 20 then
        num_rows = 20
      end

      local nodes = {}

      table.insert(nodes, t("#table(\n  columns: 3,\n  table.header(\n    ["))
