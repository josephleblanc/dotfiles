        table.insert(nodes, i(6 + (row_num - 1) * 3, " ")) -- Using row_num here
        table.insert(nodes, t("]\n  ),\n"))
      end

      table.insert(nodes, t(")\n"))

      return sn(nil, nodes)
    end)
